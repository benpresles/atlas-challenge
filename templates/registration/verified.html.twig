{% extends 'base.html.twig' %}

{% block title %}Sign Up{% endblock %}

{% block body %}
    <div class="d-flex align-items-center justify-content-center">
        <div class="text-center">
            <h1 class="display-1 fw-bold mt-5">Yes!</h1>
            <p class="fs-3 text-success">Registration</p>
            <p class="lead">
                {{ user.email }} is now registered. <br>
                An automatic email has been set to {{ user.email }} with CC to you.
            </p>
            <p>
                <a href="{{ path('app_home') }}" class="btn btn-primary mb-5">Go Home</a>
            </p>
            <img src ="{{ asset('build/images/yes.jpg') }}" class="img-fluid">
        </div>
    </div>
{% endblock %}