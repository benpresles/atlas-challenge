{% for label, messages in app.flashes %}
    <div class="flash alert alert-dismissible fade show alert-{{ label }} mt-4 mb-5" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        </button>
        {% for message in messages %}
            <p class="message mb-0">{{ message | raw }}</p>
        {% endfor %}
    </div>
{% endfor %}